CC:= gcc
CFLAGS:= -std=c99 -Wall -Werror -pedantic
OBJS:= in_out.o process.o main.o

all : app.exe

app.exe : $(OBJS)
	$(CC) -o app.exe $(OBJS)

in_out.o : in_out.c in_out.h
	$(CC) $(CFLAGS) -c in_out.c

process.o : process.c process.h
	$(CC) $(CFLAGS) -c process.c

main.o : main.c process.h  in_out.h
	$(CC) $(CFLAGS) -c main.c


clean :
	$(RM) *.o *.exe
